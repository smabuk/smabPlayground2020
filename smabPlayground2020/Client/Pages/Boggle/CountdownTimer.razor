@page "/countdown"
<div style="position: relative; top: 200px;">
    <div class="wrap">
        <h1>Draft <strong>Countdown</strong></h1>

        <div class="countdown">
            <div class="bloc-time hours" data-init-value="@Start.Hours">
                <span class="count-title">Hours</span>

                <div class="figure hours hours-1">
                    <span class="top">0</span>
                    <span class="top-back">
                        <span>0</span>
                    </span>
                    <span class="bottom">0</span>
                    <span class="bottom-back">
                        <span>0</span>
                    </span>
                </div>

                <div class="figure hours hours-2">
                    <span class="top">0</span>
                    <span class="top-back">
                        <span>0</span>
                    </span>
                    <span class="bottom">0</span>
                    <span class="bottom-back">
                        <span>0</span>
                    </span>
                </div>
            </div>

            <div class="bloc-time min" data-init-value="@Start.Minutes">
                <span class="count-title">Minutes</span>

                <div class="figure min min-1">
                    <span class="top">0</span>
                    <span class="top-back">
                        <span>0</span>
                    </span>
                    <span class="bottom">0</span>
                    <span class="bottom-back">
                        <span>0</span>
                    </span>
                </div>

                <div class="figure min min-2">
                    <span class="top">3</span>
                    <span class="top-back">
                        <span>3</span>
                    </span>
                    <span class="bottom">3</span>
                    <span class="bottom-back">
                        <span>3</span>
                    </span>
                </div>
            </div>

            <div class="bloc-time sec" data-init-value="@Start.Seconds">
                <span class="count-title">Seconds</span>

                <div class="figure sec sec-1">
                    <span class="top">0</span>
                    <span class="top-back">
                        <span>0</span>
                    </span>
                    <span class="bottom">0</span>
                    <span class="bottom-back">
                        <span>0</span>
                    </span>
                </div>

                <div class="figure sec sec-2">
                    <span class="top">0</span>
                    <span class="top-back">
                        <span>0</span>
                    </span>
                    <span class="bottom">0</span>
                    <span class="bottom-back">
                        <span>0</span>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
@code {
    // Inspired by https://codepen.io/doriancami/pen/jEJvaV

    [Parameter]
    public TimeSpan Start { get; set; } = new(0, 3, 0);

}