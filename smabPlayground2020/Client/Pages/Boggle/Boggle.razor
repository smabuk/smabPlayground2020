<div class="row my-auto mt-5">
    <button class="btn btn-primary" @onclick="() => StartNewGame()" >New Game</button>
</div>
<div class="row my-auto mt-3">
    <div class="mt-xl-2 @(NoOfPlayers == 1 ? "col-xl" : "col-xl-auto mr-xl-auto")">
        <BoggleBoard BoggleTray="BoggleTray" />
    </div>
    @if (NoOfPlayers == 2)
    {
        <br />
        <div class="col-xl-auto mt-xl-2 mt-5">
            <BoggleBoard BoggleTray="BoggleTray" Reverse="true" />
        </div>
    }
</div>
