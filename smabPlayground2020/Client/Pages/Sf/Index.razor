@page "/Sf"

<h1>Syncfusion Demos</h1>

<div class="control-section">
    <div class="calender-section">
        <div id="calender-control">
            <SfCalendar TValue="DateTime?" @bind-Value="@DropVal"></SfCalendar>
        </div>
        <div id="display_date">
            <span id="date_value">Selected values: @(DropVal?.ToString("yyyy-MM-dd"))</span>
        </div>
    </div>
</div>

@code {
    public DateTime? DropVal { get; set; } = DateTime.Now;
}