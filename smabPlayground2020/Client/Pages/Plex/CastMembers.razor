@using smabPlayground2020.Shared.PlexInfo.Models

@if (!(Roles is null))
{
    <h2>Cast</h2>
    <div class="card-group">
        @foreach (var role in Roles)
        {
            <CastMember Role="@role" />
        }
    </div>
}

@code {
    [Parameter]
    public IList<RoleSubitem>? Roles { get; set; }
}
